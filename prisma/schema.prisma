// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Competition {
  id       Int    @id @default(autoincrement())
  name     String
  code     String @unique
  areaName String
  teams    Team[]
}

model Team {
  id         Int         @id @default(autoincrement())
  league     Competition @relation(fields: [leagueCode], references: [code])
  leagueCode String
  name       String
  tla        String
  shortName  String
  areaName   String
  address    String
  players    Player[]
  coach      Coach?
}

model Player {
  id          Int    @id @default(autoincrement())
  name        String
  position    String
  dateOfBirth String
  nationality String
  team        Team   @relation(fields: [teamId], references: [id])
  teamId      Int
}

model Coach {
  id          Int    @id @default(autoincrement())
  name        String
  dateOfBirth String
  nationality String
  team        Team   @relation(fields: [teamId], references: [id])
  teamId      Int    @unique
}
